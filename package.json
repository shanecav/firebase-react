{
  "name": "firebase-react",
  "version": "1.0.1",
  "description": "Connect firebase queries to react props with a simple HOC API",
  "main": "lib/index.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "scripts": {
    "test": "jest --notify",
    "clean": "rimraf lib dist",
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run clean && npm test && npm run build",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib --copy-files --ignore spec.js",
    "build:umd": "cross-env BABEL_ENV=commonjs NODE_ENV=development webpack",
    "build:umd:min": "cross-env BABEL_ENV=commonjs NODE_ENV=production webpack"
  },
  "repository": "https://github.com/shanecav/firebase-react",
  "keywords": [
    "firebase",
    "react"
  ],
  "author": "Shane Cavaliere <shane@shanecavaliere.com>",
  "license": "MIT",
  "peerDependencies": {
    "firebase": "^3.6.5 || ^4.0.0",
    "react": "^0.14.0 || ^15.0.0-0 || ^16.0.0-0"
  },
  "dependencies": {
    "ramda": "^0.24.1"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-ramda": "^1.1.6",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.16.0",
    "cross-env": "^3.1.4",
    "enzyme": "^2.7.0",
    "flow-bin": "^0.48.0",
    "jest": "^18.1.0",
    "jsdom": "^9.9.1",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "rimraf": "^2.5.4",
    "webpack": "^1.14.0"
  }
}
